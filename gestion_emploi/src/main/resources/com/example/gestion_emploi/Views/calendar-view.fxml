<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.CalendarController"
      prefHeight="600.0" prefWidth="800.0"
      style="-fx-background-color: white;">
    
    <VBox spacing="10" style="-fx-background-color: #3498db; -fx-padding: 10;">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="Back to Main Menu" onAction="#goBackToMain" 
                   style="-fx-background-color: white; -fx-text-fill: #34495e;"/>
            <Label text="Calendar View" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="View Statistics" onAction="#openStatisticsView" style="-fx-background-color: white; -fx-text-fill: #3498db;"/>
            <DatePicker fx:id="datePicker" promptText="Select date" onAction="#handleDatePicker" style="-fx-background-color: white;"/>
        </HBox>
        
        <HBox alignment="CENTER" spacing="10">
            <Button text="Today" onAction="#showToday" style="-fx-background-color: white; -fx-text-fill: #3498db;"/>
            <Button text="Previous Month" onAction="#showPreviousMonth" style="-fx-background-color: white; -fx-text-fill: #3498db;"/>
            <Button text="Next Month" onAction="#showNextMonth" style="-fx-background-color: white; -fx-text-fill: #3498db;"/>
        </HBox>
    </VBox>
    
    <VBox fx:id="calendarContainer" VBox.vgrow="ALWAYS" style="-fx-padding: 10;">
        <GridPane fx:id="calendarGrid" VBox.vgrow="ALWAYS" style="-fx-background-color: white;" hgap="2" vgap="2">
            <!-- Calendar grid will be populated programmatically -->
        </GridPane>
        
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label text="Legend:" style="-fx-font-weight: bold;"/>
            <Label text="Offers" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 3 5; -fx-background-radius: 3;"/>
            <Label text="Demands" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 3 5; -fx-background-radius: 3;"/>
        </HBox>
    </VBox>
</VBox>