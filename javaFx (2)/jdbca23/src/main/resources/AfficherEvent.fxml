<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1024.0" 
            xmlns="http://javafx.com/javafx/17.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.controllers.AfficherEventController"
            style="-fx-background-color: #f5f7fa;">
    
    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        
        <!-- En-tête -->
        <HBox spacing="10">
            <Button text="Retour au menu" onAction="#retourMenu"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Vue Client" onAction="#allerVersVueClient"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            <Button text="Actualiser" onAction="#refreshTables"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Button text="Voir Calendrier" onAction="#goToCalendrier"
                    style="-fx-background-color: #8e44ad; -fx-text-fill: white;"/>
        </HBox>
        
        <!-- Titre des événements -->
        <Label text="Liste des Événements" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
        
        <!-- Section des événements -->
        <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
            <content>
                <FlowPane fx:id="cardsContainer" hgap="20" vgap="20" style="-fx-background-color: transparent;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
        
        <!-- Section de prédiction -->
        <LineChart fx:id="chartPrediction" title="Prédiction des réservations" prefHeight="300" prefWidth="500">
            <xAxis>
                <CategoryAxis label="Événement" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Nombre de réservations" />
            </yAxis>
        </LineChart>
        
    </VBox>
</AnchorPane>
