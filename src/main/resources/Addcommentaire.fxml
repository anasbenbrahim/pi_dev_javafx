<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.Addcommentaire" spacing="10">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <TextField fx:id="descriptionField" promptText="Description" prefWidth="300" />
    <TextArea fx:id="imageField" promptText="Image URL" prefWidth="300" />
    <Button text="Submit" onAction="#handleAddCommentaire" />
</VBox>
