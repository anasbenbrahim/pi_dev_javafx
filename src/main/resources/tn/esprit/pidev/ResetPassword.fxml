<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="tn.esprit.pidev.ResetPasswordController"
           style="-fx-background-color: #f0f8f0;">

    <ImageView fitWidth="1920" fitHeight="1080" preserveRatio="false">
        <!-- Vous pouvez ajouter une image de fond ici si nécessaire -->
    </ImageView>

    <Rectangle fill="rgba(255, 255, 255, 0.8)" width="600" height="500" arcWidth="20" arcHeight="20">
        <effect>
            <DropShadow radius="10" color="rgba(0, 0, 0, 0.15)" />
        </effect>
    </Rectangle>

    <VBox alignment="CENTER" spacing="20" prefWidth="550">
        <padding>
            <Insets top="40" right="50" bottom="40" left="50"/>
        </padding>

        <VBox alignment="CENTER" spacing="12">
            <Text style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-fill: #388e3c;"
                  text="Réinitialisation du mot de passe" />
            <Text style="-fx-font-size: 15px; -fx-fill: #555;"
                  text="Entrez le code de vérification et votre nouveau mot de passe." />
        </VBox>

        <GridPane vgap="15" hgap="20" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Code de vérification:" style="-fx-text-fill: #43a047; -fx-font-weight: bold;"
                   GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="codeField" style="-fx-background-radius: 8; -fx-border-color: #81c784; -fx-border-radius: 8; -fx-padding: 8;"
                       GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Nouveau mot de passe:" style="-fx-text-fill: #43a047; -fx-font-weight: bold;"
                   GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <PasswordField fx:id="newPasswordField" style="-fx-background-radius: 8; -fx-border-color: #81c784; -fx-border-radius: 8; -fx-padding: 8;"
                           GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Confirmer mot de passe:" style="-fx-text-fill: #43a047; -fx-font-weight: bold;"
                   GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <PasswordField fx:id="confirmPasswordField" style="-fx-background-radius: 8; -fx-border-color: #81c784; -fx-border-radius: 8; -fx-padding: 8;"
                           GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Réinitialiser" onAction="#resetPassword"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-cursor: hand; -fx-font-size: 16px;" />
            <Button text="Retour à la connexion" onAction="#backToLogin"
                    style="-fx-background-color: transparent; -fx-text-fill: #777; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 16px;" />
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 14px; -fx-padding: 10 0;" />
    </VBox>
</StackPane>