<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f8faf5;" stylesheets="@../../view/produit/admin_dashboard.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.pidev.Controller.PaymentController">
    <!-- Top Bar with Gradient -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" prefHeight="48.0" prefWidth="800.0" spacing="20" style="-fx-background-color: linear-gradient(to right, #4a8c24, #6b9e3a); -fx-padding: 18 32 18 32;">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Paiement de Commande" />
            </HBox>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
            <!-- Order Summary -->
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3d5c1e;" text="Résumé de la Commande" />
                
                <GridPane hgap="20" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="250" />
                    </columnConstraints>
                    
                    <Label text="Numéro de commande:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="orderIdLabel" text="---" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Date:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="orderDateLabel" text="---" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Total à payer:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="orderTotalLabel" text="---" style="-fx-font-size: 16px; -fx-text-fill: #4a8c24; -fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                </GridPane>
            </VBox>
            
            <!-- Payment Form -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3d5c1e;" text="Informations de Paiement" />
                
                <GridPane hgap="15" vgap="15">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                    
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                    </columnConstraints>
                    
                    <Label text="Numéro de carte:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="cardNumberField" promptText="1234 5678 9012 3456" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Nom sur la carte:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="cardNameField" promptText="JEAN DUPONT" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Date d'expiration:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <TextField fx:id="expiryMonthField" promptText="MM" prefWidth="60" />
                        <Label text="/" style="-fx-font-weight: bold;" />
                        <TextField fx:id="expiryYearField" promptText="AA" prefWidth="60" />
                    </HBox>
                    
                    <Label text="Code de sécurité:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="cvcField" promptText="123" prefWidth="80" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </GridPane>
                
                <Button fx:id="payButton" onAction="#handlePayment" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 12 30; -fx-font-size: 14px;" text="Payer Maintenant" />
                
                <Label fx:id="paymentStatusLabel" style="-fx-font-size: 14px; -fx-text-fill: #e53935; -fx-font-weight: bold;" visible="false" />
            </VBox>
            
            <!-- Back Button -->
            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#handleCancel" style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" text="Annuler" />
            </HBox>
        </VBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox style="-fx-background-color: linear-gradient(to right, #4a8c24, #6b9e3a); -fx-padding: 15; -fx-alignment: center;">
            <Label style="-fx-text-fill: white; -fx-font-style: italic; -fx-font-size: 14px;" text="© 2025 AgroStock - Système de Gestion Agricole" />
        </HBox>
    </bottom>
</BorderPane>