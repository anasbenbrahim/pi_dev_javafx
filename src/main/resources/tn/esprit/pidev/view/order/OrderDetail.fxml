<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.pidev.Controller.OrderDetailController" spacing="24" alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom, #f8fff5, #e0f7e0); -fx-padding: 36;">
    <HBox spacing="18" alignment="CENTER_LEFT" style="-fx-background-color: #e8f4d8; -fx-background-radius: 16; -fx-padding: 18;">
        <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">

        </ImageView>
        <VBox spacing="6">
            <Label text="Détail de la commande client" style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #388e3c;" />
            <Label text="Retrouvez ici tous les éléments de votre commande" style="-fx-font-size: 14; -fx-text-fill: #7bb661;" />
        </VBox>
    </HBox>
    <HBox spacing="30" alignment="CENTER">
        <Label text="Commande n°:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #4a8c24;"/><Label fx:id="labelOrderId" style="-fx-font-size: 16;"/>
        <Label text="Status:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #4a8c24;"/><Label fx:id="labelStatus" style="-fx-font-size: 16;"/>
        <Label text="Date:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #4a8c24;"/><Label fx:id="labelDate" style="-fx-font-size: 16;"/>
        <Label text="Total:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #4a8c24;"/><Label fx:id="labelTotal" style="-fx-font-size: 16;"/>
    </HBox>
    <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;">
        <VBox fx:id="itemsContainer" spacing="12" alignment="TOP_CENTER" style="-fx-padding: 12 0 12 0;" />
    </ScrollPane>

    <HBox spacing="18" alignment="CENTER">
        <Button fx:id="payButton" text="Payer" visible="false" managed="false"
                style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" />
        <Button text="Retour à l'historique" onAction="#goToOrderHistory" style="-fx-background-color: #7bb661; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 25;" />
        <Button text="Retour" onAction="#handleRetour" style="-fx-background-color: #a3a3a3; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 25;"/>
    </HBox>
</VBox>
