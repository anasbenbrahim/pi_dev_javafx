<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.pidev.Controller.CategoryController"
      spacing="15" style="-fx-background-color: #f8faf5;">

    <!-- En-tête agricole -->
    <HBox style="-fx-background-color: linear-gradient(to right, #4a8c24, #6b9e3a); -fx-padding: 15;"
          alignment="CENTER" spacing="10">
        <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">

        </ImageView>
        <Label text="Gestion des Catégories Agricoles"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">

            <TextField promptText="Rechercher catégorie..." style="-fx-background-radius: 20; -fx-prompt-text-fill: #a3c292;"/>
            <Button text="Filtrer" style="-fx-background-color: #3d5c1e; -fx-text-fill: white; -fx-background-radius: 20;"/>
        </HBox>
    </HBox>

    <!-- Barre d'outils -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #e8f4d8;">
        <Button text="Ajouter Catégorie" onAction="#goToCategoryForm"
                style="-fx-background-color: #4a8c24; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;">
            <graphic>
                <ImageView fitHeight="16" fitWidth="16">

                </ImageView>
            </graphic>
        </Button>
        <Button text="Accueil" onAction="#goToMainView"
                style="-fx-background-color: #7e57c2; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Produits" onAction="#navigateToProduit" style="-fx-background-color: #7e57c2; -fx-text-fill: white; -fx-font-weight: bold;"> </Button>
        <FlowPane fx:id="produitFlow" hgap="32" vgap="32" alignment="CENTER" style="-fx-padding: 24 0;">
            <!-- Product cards will be added dynamically from the controller -->
        </FlowPane>


        <Label text="Total Catégories: " style="-fx-font-weight: bold; -fx-text-fill: #3d5c1e;"/>

    </HBox>

    <!-- Modern Card Grid for Categories -->
    <FlowPane fx:id="categoryFlow" hgap="32" vgap="32" alignment="CENTER" style="-fx-padding: 32 24;">
        <!-- Category cards will be added dynamically from the controller -->
    </FlowPane>

    <!-- Pied de page -->
    <HBox alignment="CENTER" style="-fx-background-color: #e8f4d8; -fx-padding: 10;">
        <Label text=" 2023 AgroStock - Système de Gestion Agricole"
               style="-fx-text-fill: #5a7c3b; -fx-font-style: italic;"/>
    </HBox>
</VBox>