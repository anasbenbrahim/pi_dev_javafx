<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800" prefWidth="1100" style="-fx-background-color: #f8faf5;" stylesheets="@admin_dashboard.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.pidev.Controller.ProduitController">
    <!-- Top Bar with Gradient -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" prefHeight="48.0" prefWidth="1100.0" spacing="20" style="-fx-background-color: linear-gradient(to right, #4a8c24, #6b9e3a); -fx-padding: 18 32 18 32;">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Gestion des Produits Agricoles" />
                <Region HBox.hgrow="ALWAYS" />
                <VBox fx:id="notifListPane" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f8f8f8); -fx-border-color: #e53935; -fx-border-width: 0 0 0 4; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0.2, 0, 5); -fx-max-width: 360; -fx-spacing: 10; -fx-alignment: TOP_RIGHT; -fx-translate-y: 38; -fx-opacity: 0;" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e53935;" text="🔔 Notifications" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="closeNotifPaneBtn" style="-fx-background-color: transparent; -fx-text-fill: #757575; -fx-font-size: 16; -fx-cursor: hand;" text="✖" />
                    </HBox>
                    <HBox style="-fx-background-color: #e0e0e0; -fx-min-height: 1; -fx-max-height: 1;" />
                    <ListView fx:id="notifListView" prefHeight="220" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14;" />
                </VBox>
                <TextField fx:id="searchField" promptText="Rechercher un produit..." style="-fx-background-radius: 20; -fx-prompt-text-fill: #a3c292; -fx-pref-width: 250;" />
                <Button fx:id="notifBellBtn" style="-fx-background-color: #e53935; -fx-background-radius: 50%; -fx-min-width: 40; -fx-min-height: 40; -fx-font-size: 18; -fx-text-fill: white; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);" text="🔔" />
            </HBox>

            <!-- Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10 32; -fx-background-color: #e8f4d8;">
                <Button onAction="#navigateToCategories" style="-fx-background-color: #3d5c1e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;" text="Catégories" />
                <Button onAction="#goToMainView" style="-fx-background-color: #6b9e3a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;" text="Accueil" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-padding: 0;">
            <content>
                <StackPane>
                    <children>
                        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 25 40 40 40;" styleClass="main-content">
                            <!-- Statistics Cards with Icons -->
                            <HBox alignment="CENTER" spacing="25">
                                <VBox alignment="CENTER" spacing="12" style="-fx-background-color: linear-gradient(to bottom right, #f1f8e9 70%, #c8e6c9 100%); -fx-min-width: 200; -fx-min-height: 120; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" styleClass="card">
                                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="🌾 Total Produits" />
                                    <Label fx:id="totalProduitsLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
                                </VBox>
                                <VBox alignment="CENTER" spacing="12" style="-fx-background-color: linear-gradient(to bottom right, #e8f5e9 70%, #a5d6a7 100%); -fx-min-width: 200; -fx-min-height: 120; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" styleClass="card">
                                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="✅ En Stock" />
                                    <Label fx:id="inStockLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
                                </VBox>
                                <VBox alignment="CENTER" spacing="12" style="-fx-background-color: linear-gradient(to bottom right, #ffebee 70%, #ffcdd2 100%); -fx-min-width: 200; -fx-min-height: 120; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" styleClass="card">
                                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #c62828;" text="⚠️ Rupture" />
                                    <Label fx:id="outStockLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #b71c1c;" />
                                </VBox>
                                <VBox alignment="CENTER" spacing="12" style="-fx-background-color: linear-gradient(to bottom right, #f3e5f5 70%, #ce93d8 100%); -fx-min-width: 200; -fx-min-height: 120; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" styleClass="card">
                                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #6a1b9a;" text="📊 Catégories" />
                                    <Label fx:id="totalCategoriesLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4a148c;" />
                                </VBox>
                            </HBox>

                            <!-- Rupture Notification Banner -->
                            <HBox fx:id="ruptureNotification" alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to right, #ffebee, #ffcdd2); -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e53935; -fx-border-width: 2; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(229,57,53,0.2), 8, 0, 0, 2);" visible="false">
                                <Label style="-fx-text-fill: #c62828; -fx-font-size: 16px; -fx-font-weight: bold;" text="⚠️ Attention : Un ou plusieurs produits sont en rupture de stock !" />
                            </HBox>

                            <!-- Product Flow with Title -->
                            <VBox spacing="15">
                                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3d5c1e; -fx-padding: 0 0 5 0;" text="Liste des Produits Agricoles" />
                                <FlowPane fx:id="produitFlow" alignment="CENTER" hgap="35" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 8, 0, 0, 2);" vgap="35">
                                    <!-- Product cards will be added dynamically from the controller -->
                                </FlowPane>
                            </VBox>

                            <!-- Action Buttons -->
                            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15 0 0 0;">
                                <Button onAction="#handleAddProduit" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20; -fx-graphic-text-gap: 8;" text="Ajouter Produit">
                                    <graphic>
                                        <Text style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: white;" text="+" />
                                    </graphic>
                                </Button>
                                <Button onAction="#handleEditProduit" style="-fx-background-color: #fbc02d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20;" text="Modifier" />
                                <Button onAction="#handleDeleteProduit" style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20;" text="Supprimer" />
                                <Button onAction="#handleExportCSV" style="-fx-background-color: #7e57c2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20;" text="Exporter CSV" />
                            </HBox>
                        </VBox>

                        <!-- Notification flottante toast à droite - Style moderne -->
                        <VBox fx:id="ruptureToast" alignment="TOP_RIGHT" style="-fx-background-color: linear-gradient(to right, #ffffff, #fff8f5); -fx-border-color: #e53935; -fx-border-width: 0 0 0 4; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0.2, 0, 5); -fx-max-width: 360; -fx-spacing: 12; -fx-translate-x: 380; -fx-translate-y: 20; -fx-opacity: 0;" visible="false">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label style="-fx-font-size: 20px; -fx-text-fill: #e53935;" text="🚨" />
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e53935;" text="Rupture de stock" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="closeToastBtn" style="-fx-background-color: transparent; -fx-text-fill: #757575; -fx-font-size: 16; -fx-cursor: hand;" text="✖" />
                            </HBox>
                            <HBox style="-fx-background-color: #e0e0e0; -fx-min-height: 1; -fx-max-height: 1;" />
                            <VBox spacing="8" style="-fx-padding: 4 0 0 0;">
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #616161;" text="Les produits suivants sont en rupture:" />
                                <Label fx:id="ruptureListLabel" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #e53935;" wrapText="true" />
                            </VBox>
                        </VBox>
                    </children>
                </StackPane>
            </content>
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox style="-fx-background-color: linear-gradient(to right, #4a8c24, #6b9e3a); -fx-padding: 15; -fx-alignment: center;">
            <Label style="-fx-text-fill: white; -fx-font-style: italic; -fx-font-size: 14px;" text="© 2025 AgroStock - Système de Gestion Agricole" />
        </HBox>
    </bottom>
</BorderPane>