<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="1000" minWidth="1840" style="-fx-background-color: #f0f8f0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.pidev.LoginController">

    <ImageView fx:id="BgImageView" fitHeight="1080" fitWidth="1920" preserveRatio="false">
    </ImageView>

    <Rectangle arcHeight="20" arcWidth="20" fill="rgba(255, 255, 255, 0.8)" height="550" width="750">
        <effect>
            <DropShadow color="rgba(0, 0, 0, 0.15)" radius="10" />
        </effect>
    </Rectangle>

    <VBox fx:id="loginFormVBox" alignment="CENTER" prefWidth="650" spacing="20">
        <padding>
            <Insets bottom="40" left="50" right="50" top="40" />
        </padding>

        <VBox alignment="CENTER" spacing="12">
            <ImageView fx:id="myImageView" fitHeight="90" fitWidth="90" preserveRatio="true">
            </ImageView>
            <Text style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-fill: #388e3c;" text="Bienvenue sur Terre Connectée" />
            <Text style="-fx-font-size: 15px; -fx-fill: #555;" text="Connectez-vous pour gérer votre exploitation agricole" />
        </VBox>

        <GridPane alignment="CENTER" hgap="20" vgap="15">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label style="-fx-text-fill: #43a047; -fx-font-weight: bold;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="emailField" prefWidth="216.0" style="-fx-background-radius: 8; -fx-border-color: #81c784; -fx-border-radius: 8; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-text-fill: #43a047; -fx-font-weight: bold;" text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="passwordField" prefWidth="216.0" style="-fx-background-radius: 8; -fx-border-color: #81c784; -fx-border-radius: 8; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <Label fx:id="messageLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 14px; -fx-padding: 10 0;" />

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-cursor: hand; -fx-font-size: 16px;" text="Se connecter" />
            <Button onAction="#goToSignup" style="-fx-background-color: transparent; -fx-text-fill: #388e3c; -fx-border-color: #388e3c; -fx-border-radius: 10; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-weight: bold; -fx-font-size: 16px;" text="S'inscrire" />
        </HBox>

        <Button onAction="#forgotPassword" style="-fx-background-color: transparent; -fx-text-fill: #388e3c; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px; -fx-underline: true;" text="Mot de passe oublié ?" />
    </VBox>
</StackPane>
