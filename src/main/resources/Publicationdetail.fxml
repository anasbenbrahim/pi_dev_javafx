<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Publicationdetail"
      style="-fx-background-color: #f4f4f4; -fx-padding: 10;"
      spacing="10">

    <!-- Title Label -->
    <Label fx:id="titreLabel" text="Publication Title" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Description Label -->
    <Label fx:id="descriptionLabel" text="Publication Description" style="-fx-font-size: 14px;"/>

    <!-- Date Label -->
    <Label fx:id="dateLabel" text="Publication Date" style="-fx-font-size: 12px; color: gray;"/>

    <!-- Image View -->
    <ImageView fx:id="imageView" fitWidth="200" fitHeight="200" style="-fx-padding: 10;" />

    <!-- VBox for dynamic comments -->
    <VBox fx:id="commentairesVBox" spacing="10" style="-fx-padding: 10;">
        <!-- Comments will be added dynamically here -->
    </VBox>

    <!-- Button to add a comment -->
    <Button text="Ajouter un Commentaire" onAction="#openCommentaireForm"/>

</VBox>
