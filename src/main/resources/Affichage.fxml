<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controllers.Affichage" stylesheets="@style.css">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <!-- Main Content Container with Sidebar and Content -->
    <HBox styleClass="main-container">
        <!-- Sidebar Menu -->
        <VBox styleClass="sidebar" minWidth="200" maxWidth="300" prefWidth="242">
            <padding>
                <Insets top="20.0" right="15.0" bottom="20.0" left="15.0"/>
            </padding>

            <!-- Logo Section -->
            <VBox alignment="CENTER" spacing="10" styleClass="logo-section">
                <padding>
                    <Insets bottom="30"/>
                </padding>
                <ImageView fx:id="logo" fitHeight="80.0" fitWidth="80.0" styleClass="logo">
                    <image>
                        <Image url="@logo-app.png" />
                    </image>
                </ImageView>
                <Label text="Gestion Équipements" styleClass="app-title" />
            </VBox>

            <!-- Menu Buttons -->
            <VBox spacing="15" styleClass="menu-section">
                <padding>
                    <Insets top="30"/>
                </padding>
                <Button fx:id="ajout"
                        text="Ajouter"
                        onAction="#nav_ajouter"
                        styleClass="menu-button "/>
                <Button fx:id="supprimer"
                        text="Supprimer"
                        onAction="#nav_supprimer"
                        styleClass="menu-button"/>
                <Button fx:id="btn_modifier"
                        text="Statestique"
                        onAction="#nav_stat"
                        styleClass="menu-button"/>
                <Button fx:id="btn_front"
                        text="Client"
                        onAction="#nav_front"
                        styleClass="menu-button"/>
                <Button fx:id="btn_devis"
                        text="Liste Devis"
                        onAction="#nav_devis"
                        styleClass="menu-button "/>
            </VBox>
        </VBox>

        <!-- Main Content Area -->
        <VBox styleClass="content-container" HBox.hgrow="ALWAYS">
            <!-- Page Header -->
            <HBox styleClass="page-header" alignment="CENTER" prefHeight="80.0">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label fx:id="titleLabel"
                       text="Liste des équipements"
                       styleClass="page-title" />
            </HBox>

            <!-- Equipment Table Section -->
            <VBox styleClass="content-card" spacing="20" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <TableView fx:id="view" styleClass="custom-table equipment-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nom" text="Nom" styleClass="table-column" />
                        <TableColumn fx:id="category" text="Categorie" styleClass="table-column" />
                        <TableColumn fx:id="quantite" text="Quantité" styleClass="table-column" />
                        <TableColumn fx:id="prix" text="Prix" styleClass="table-column" />
                        <TableColumn fx:id="description" text="Description" styleClass="table-column" />
                        <TableColumn fx:id="image" text="Image" styleClass="table-column" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </HBox>
</VBox>