<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.AjouterPublicationForm" spacing="15" alignment="CENTER"
      stylesheets="@styles/publication.css" maxWidth="400">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <Label text="Ajouter une Publication" styleClass="form-title"/>

   <HBox spacing="10" alignment="CENTER_LEFT">
      <Label text="Titre:" styleClass="form-label"/>
      <TextField fx:id="titreField" promptText="Entrez le titre" styleClass="input-field" prefWidth="300" maxWidth="300"/>
   </HBox>

   <HBox spacing="10" alignment="CENTER_LEFT">
      <Label text="Description:" styleClass="form-label"/>
      <TextArea fx:id="descriptionField" promptText="Entrez la description" prefHeight="120" prefWidth="300" maxWidth="300" styleClass="input-field"/>
   </HBox>

   <HBox spacing="10" alignment="CENTER_LEFT">
      <Label text="Image:" styleClass="form-label"/>
      <TextField fx:id="imageUrlField" promptText="SÃ©lectionnez une image" styleClass="input-field" prefWidth="230" maxWidth="230"/>
      <Button fx:id="chooseImageButton" text="Choisir" onAction="#chooseImage" styleClass="action-button"/>
   </HBox>

   <HBox spacing="15" alignment="CENTER">
      <Button fx:id="submitButton" text="Ajouter Publication" onAction="#onSubmit" styleClass="submit-button"/>
      <Button fx:id="retourButton" text="Retour" onAction="#goBack" styleClass="action-button"/>
   </HBox>
</VBox>